#!/bin/sh
## --- finish ---
finish() {
  /usr/local/bin/firewall -D
}

## --- certificate ---
/usr/local/bin/cert-gen

## --- config ---
/usr/local/bin/config-gen

## --- firewall ---
/usr/local/bin/firewall

## --- sysctl ---
sysctl -p /etc/ipsec.d/config/sysctl.conf

## --- clear firewall on exit ---
trap finish EXIT
exec supervisord -c /etc/supervisord.conf

## EOF
