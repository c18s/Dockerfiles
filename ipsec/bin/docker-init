#!/bin/sh
## --- packages ---
apk add --no-cache \
  ppp \
  strongswan \
  xl2tpd \
  iptables \
  openssl \
  util-linux \
  lighttpd \
  supervisor \
  bind-tools

## --- clear ---
rm -rf /var/log/* /var/cache/apk/*

## --- links ---
ln -sfv /etc/ipsec.conf /etc/ipsec.d/ipsec.conf
ln -sfv /etc/ipsec.secrets /etc/ipsec.d/ipsec.secrets

## --- remove self ---
rm -- "$0"

## EOF
