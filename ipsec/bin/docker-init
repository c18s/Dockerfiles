#!/bin/sh
set -e

## --- packages ---
apk add --no-cache \
  ppp \
  strongswan \
  xl2tpd \
  iptables \
  openssl \
  util-linux \
  lighttpd \
  supervisor \
  bind-tools \
  py2-pip

pip install envtpl

## --- clear ---
rm -rf /var/log/* /var/cache/apk/*

## --- links ---
ln -sfv /etc/ipsec.conf /etc/ipsec.d/ipsec.conf
ln -sfv /etc/ipsec.secrets /etc/ipsec.d/ipsec.secrets
ln -sfv /etc/ppp/chap-secrets /etc/ipsec.d/chap-secrets

## --- remove self ---
rm -- "$0"

## EOF
